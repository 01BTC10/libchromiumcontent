#!/bin/sh

set -e

announce() {
  echo
  echo $@
  echo
}

cd "$(dirname $0)/.."
SOURCE_ROOT=$(pwd -P)
VENDOR_DIR="${SOURCE_ROOT}/vendor"
CHROMIUM_DIR="${VENDOR_DIR}/chromium"

source VERSION

export PATH="${VENDOR_DIR}/depot_tools:${PATH}"

cd "${CHROMIUM_DIR}"
gclient sync --revision src@${CHROMIUM_REVISION}

export GYP_GENERATORS=ninja
cd "${SOURCE_ROOT}"
"${CHROMIUM_DIR}/src/build/gyp_chromium" -I"chromiumcontent.gypi" --depth "${CHROMIUM_DIR}/src" chromiumcontent.gyp
