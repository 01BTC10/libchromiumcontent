#!/bin/sh

set -e

cd "$(dirname $0)/.."
SOURCE_ROOT=$(pwd -P)
VENDOR_DIR="${SOURCE_ROOT}/vendor"
NINJA_DIR="${VENDOR_DIR}/ninja"
CHROMIUM_DIR="${VENDOR_DIR}/chromium"

"${NINJA_DIR}/ninja" -C "${CHROMIUM_DIR}/src/out/Debug" chromium_content
"${NINJA_DIR}/ninja" -C "${CHROMIUM_DIR}/src/out/Release" chromium_content
